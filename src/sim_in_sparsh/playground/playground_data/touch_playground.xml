  <sensor>
    <plugin name="touch" plugin="mujoco.sensor.touch_grid" objtype="site" objname="touch">
      <config key="size" value="120 160" />
      <config key="fov" value="60 70" />
      <config key="gamma" value="0" />
      <config key="nchannel" value="3" />
